<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0) 0%, rgba(0,0,0,1) 100%), url(<%= asset_path 'bar.jpg' %>);">
  <div class="banner-content">
    <h1>The Martini</h1>
  </div>
</div>
</div>
<h1 class="text-center">Signature Cocktails</h1>
<div class="cards-container">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6">
        <!-- insert <div class="card"> -->
        <div class="card">
          <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cocktail.photo %>);">
          </div>
          <div class="card-content">
            <div class="card-content-top">
              <h2 class="card-content-header">
                <%= link_to cocktail.name, cocktail_path(cocktail) %>
              </h2>
              <p class="card-content-ingredients">
                <% cocktail.ingredients.each_with_index do |ingredient, index| %>
                <% if index == cocktail.ingredients.length - 1 %>
                <%= ingredient.name  %>
                <% else %>
                <%= ingredient.name + "," %>
                <% end %>
                <% end %>
              </p>
              <div class="more-details">
                <%= link_to cocktail_path(cocktail) do %>
                <i class="fas fa-info-circle"></i> more details
                <% end %>
              </div>
            </div>
            <div class="card-content-bottom">
              <% cocktail.stars.times do %>
              <i class="fas fa-star"></i>
              <% end %>
              <% if cocktail.half_star == true %>
              <i class="fas fa-star-half"></i>
              <% end %>
              <%= cocktail.average_rating  %>
              (
              <%= cocktail.reviews.length  %> reviews)
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
