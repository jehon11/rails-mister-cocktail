<div class="container">
  <div class="form">
    <h1>Add a new cocktail</h1>
    <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name, required: false%>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= button_tag( :class => "button") do %>
    <i class="fas fa-plus-circle"></i> Add Cocktail
    <% end %>
    <% end %>
  </div>
</div>
